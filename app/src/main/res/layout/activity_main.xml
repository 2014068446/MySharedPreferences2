<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dcucharo.mysharedpreferences.MainActivity">

    <TextView
        android:id="@+id/tv_Display"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:text="Display" />
    <TextView
        android:layout_width="150px"
        android:layout_height="120px"
        android:text="Username"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/textView4" />
    <TextView
        android:layout_width="150px"
        android:layout_height="120px"
        android:text="Password"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView5" />

    <EditText
        android:id="@+id/et_Username"
        android:layout_width="200px"
        android:layout_height="80px"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_Password"
        android:layout_width="200px"
        android:layout_height="80px"
        android:layout_alignEnd="@+id/et_Username"
        android:layout_below="@+id/textView4"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_display"
        android:layout_alignBottom="@+id/btn_display"
        android:layout_alignStart="@+id/et_Password"
        android:onClick="saveInfo"
        android:text="Save" />

    <Button
        android:id="@+id/btn_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:onClick="loadInfo"
        android:text="Display" />
</RelativeLayout>